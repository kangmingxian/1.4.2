/* pages/chaxun/chaxun.wxss */
.container1 {
  
  padding: 20rpx;
  border-top: 1rpx solid #e5e5e5;
}

.header {
  display: flex;
  align-items: center;
  border: 1rpx solid #e0e0e0;
  border-radius: 10rpx;
  box-shadow: 0 0 5rpx #e0e0e0;
  margin-bottom: 20rpx;
  padding: 20rpx;
}
.header .plus {
  width: 50rpx;
  height: 50rpx;
  margin-right: 20rpx;
}

.header .new-todo {
  flex: 1;
  font-size: 30rpx;
}
.btn3{
  width: 100rpx;
  border-radius: 98rpx;
  background: #E6F3F9;
  margin-top: 50rpx;
}

.kefu-box{
  position: fixed;
  top: 280rpx;
  right: 0;
  z-index: 2;
  display: flex;
  justify-content: flex-end;
  align-items: flex-end;
  flex-direction: column;
  width: 400rpx;
  height: 400rpx;
}
.kefu-body {
  background-color: white;
  box-shadow: 0 10rpx 20rpx -10rpx #e1e1e1;
  border-radius: 140rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 60rpx;
  padding: 10rpx 30rpx;
  margin-right: 40rpx;
  margin-bottom: 40rpx;
}
.img{
  width: 40rpx;
  height: 40rpx;
}
.q-tx{
  margin: 0 0 0 10rpx;
  font-size: 30rpx;
}

.grid{
  margin-top: 70rpx;
}
.itemgrid{
  position: relative;
  float: left;
  padding: 40rpx 20rpx;
  width: 33.3333333333%; 
  box-sizing: border-box;
  border-right: 1rpx solid #D9D9D9;
  border-bottom: 1rpx solid #D9D9D9;
 
}

.itemgrid_active{
 
  background-color: #ECECEC
}

.itemgrid_icon{
  display: block;
  width: 56rpx;
  height: 56rpx;
  margin: 0 auto;
}

.itemgrid_label{
  margin-top: 10rpx;
  display: block;
  text-align: center;
  color: #000000;
  font-size: 28rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.slide-image{
  width: 100%;
  height: 100%;
}